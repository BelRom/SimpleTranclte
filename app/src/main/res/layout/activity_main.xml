<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.belrs.simpletranclte.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTranslate"
        android:layout_alignParentStart="true"
        android:id="@+id/textAnswer"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/textTranslate"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="@string/translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTranslate"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textAnswer"
        android:layout_alignParentStart="true"/>



    <Button
        android:text="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonTranslate"
        android:layout_toEndOf="@+id/buttonTranslate"
        android:id="@+id/buttonSave"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ferstLanguge"
        android:layout_alignTop="@+id/buttonSave"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/buttonSave"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondLanguge"
        android:layout_below="@+id/ferstLanguge"
        android:layout_toEndOf="@+id/buttonSave"/>


    <Button
        android:text="refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRefresh"
        android:layout_below="@+id/buttonTranslate"/>

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonTranslate"
        android:layout_toEndOf="@+id/buttonRefresh"
        android:id="@+id/buttonDelete"/>

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSave"
        android:layout_toEndOf="@+id/buttonDelete"
        android:id="@+id/buttonUpdate"/>

    <Button
        android:text="Dictionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OpenDictionary"
        android:id="@+id/dictionaryButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="GameOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameOneTextView"
        android:layout_below="@+id/buttonDelete"
        android:layout_centerHorizontal="true"
        android:contextClickable="true"
        android:clickable="true"/>


</RelativeLayout>
